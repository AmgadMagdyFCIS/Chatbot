<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.freshman_guide_chatbot">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Freshman_guide_chatbot">

        <activity
            android:name=".Ui.SplashScreen"
            android:exported="true"
            android:theme="@style/SplashScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".Ui.NavigationActivity"

            android:exported="false" />
        <activity
            android:name=".Ui.Registration.SignInWithGoogle"
            android:exported="false" />
        <activity
            android:name=".Ui.Registration.ForgetPassword"
            android:exported="false" />
        <activity
            android:name=".Ui.Registration.Login"
            android:exported="false"/>


        <activity
            android:name=".Ui.Registration.Sign_Up"
            android:exported="false" />
        <activity
            android:name=".Ui.MainActivity"
            android:exported="false" />

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>